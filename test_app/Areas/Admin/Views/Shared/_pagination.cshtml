@model E_commerce.Models.PagingInfo

<div class="container">
    @if (Model.TotalPages > 0)
    {
        <ul class="pagination justify-content-start">

            @if (Model.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="@Model.PageName" asp-action="Index" asp-route-page="1" )"> First </a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-controller="@Model.PageName" asp-action="Index" asp-route-page="@(Model.CurrentPage-1)"> Previous </a>
                </li>
            }
            @for (var pge = Model.StartPage; pge <= Model.EndPage; pge++)
            {
                <li class="page-item @(pge == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-controller="@Model.PageName" asp-action="Index" asp-route-page="@pge"> @pge </a>
                </li>
            }
            @if (Model.CurrentPage < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="@Model.PageName" onclick="showInPopup('@Url.Action("CreateOrEdit","Users","@(Model.CurrentPage+1)",Context.Request.Scheme)')"> Next </a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-controller="@Model.PageName" asp-action="Index" asp-route-page="@(Model.TotalPages)"> Last </a>
                </li>
            }
        </ul>
    }
</div>